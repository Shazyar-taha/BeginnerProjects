<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<?import com.shazyar.service.AlertMessage?>
<AnchorPane prefHeight="470.0" prefWidth="380.0" styleClass="background" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shazyar.palette_color.group_color.AddGroupController">
    <children>
        <TextField fx:id="groupNameTf" layoutX="54.0" layoutY="184.0" onAction="#addGroupName" prefHeight="44.0"
                   prefWidth="279.0" styleClass="tf"/>
        <Text layoutX="119.0" layoutY="76.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title"
              text="Add Group"/>
        <Label layoutX="54.0" layoutY="155.0" styleClass="label-text" text="Group Name"/>
        <Button layoutX="54.0" layoutY="254.0" mnemonicParsing="false" onAction="#addGroupName" prefHeight="44.0"
                prefWidth="279.0" styleClass="btn" text="Add"/>
        <HBox alignment="CENTER" layoutX="9.0" layoutY="324.0" prefHeight="82.0" prefWidth="378.0">
            <children>
                <AlertMessage fx:id="alertMessage" alignment="CENTER" contentDisplay="CENTER" styleClass="alert-success"
                              visible="false" wrapText="true"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
